<div class="row-fluid">
	<div class="span3"></div>
	<div class="span6">
		<%= form_for(resource, :html => { :class => ""}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <fieldset>
		    <legend>Sign in</legend>
			  <div class="control-group">
			  	<%= f.label :login %>
			  	<%= f.text_field :login %>
			  </div>
			
			  <div class="control-group">
			  <%= f.label :password %>
			  <%= f.password_field :password %></div>
			
			  <% if devise_mapping.rememberable? %>
			    <label class ="checkbox">
			    Remember me
			    <%= f.check_box :remember_me %>
			    </label>
			  <% end %>
			  <div class="form-actions">
			  	<div class="pull-right"><%= f.submit "Sign in", :class =>"btn btn-primary" %></div>
			  </div>
		  </fieldset>
		<% end %>
		
		<%= render :partial => "devise/shared/links" %>
	</div>
</div>